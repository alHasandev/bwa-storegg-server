<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Bank</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item">
              <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item">
              <a href="/bank">Bank</a>
            </li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Tambah Bank</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/bank/create" method="post">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Nama Pemilik</label>
                  <input
                    type="text"
                    name="name"
                    id="name"
                    class="form-control"
                    placeholder="Masukkan nama pemilik rekening"
                  />
                </div>
                <div class="form-group">
                  <label for="bankName">Nama Bank</label>
                  <select
                    name="bankName"
                    id="bankName"
                    class="form-control select2"
                    style="width: 100%"
                  >
                    <option value="" selected="selected">Pilih Bank</option>
                    <option value="BRI">BRI</option>
                    <option value="BNI">BNI</option>
                    <option value="BTN">BTN</option>
                    <option value="BCA">BCA</option>
                    <option value="BSI">BSI</option>
                    <option value="Mandiri">Mandiri</option>
                    <option value="Credit card">Credit card</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="rekeningNumber">Nomer Rekening</label>
                  <input
                    type="number"
                    name="rekeningNumber"
                    id="rekeningNumber"
                    class="form-control"
                    placeholder="Masukkan nomer rekening"
                  />
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
